<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserLogin">

    <EditText
        android:id="@+id/SignUpUserPhoneNumber"
        android:layout_width="334dp"
        android:layout_height="45dp"
        android:inputType="phone"
        android:text="Номер телефона"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.224"></EditText>

    <EditText
        android:id="@+id/SignUpUserPassword1"
        android:layout_width="334dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:text="Пароль"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SignUpUserPhoneNumber"></EditText>

    <EditText
        android:id="@+id/SignUpUserPassword2"
        android:layout_width="334dp"
        android:layout_height="45dp"
        android:layout_marginTop="12dp"
        android:text="пипися"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SignUpUserPassword1"></EditText>

    <Button
        android:id="@+id/SignUpButton"
        android:layout_width="277dp"
        android:layout_height="41dp"
        android:text="Зарегистрироваться"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SignUpUserPassword2"
        app:layout_constraintVertical_bias="0.152"></Button>
</androidx.constraintlayout.widget.ConstraintLayout>